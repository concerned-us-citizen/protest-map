{
  "eslint.validate": ["javascript", "typescript", "svelte"],
  "eslint.useFlatConfig": true,
  "eslint.enable": true,
  "eslint.run": "onType",

  "editor.codeActionsOnSave": {
    "source.fixAll": "never"
  },

  "eslint.codeActionsOnSave.mode": "all",

  "eslint.options": {
    "extraFileExtensions": [".svelte"]
  },

  "files.exclude": {
    "**/.svelte-kit": true,
    "**/build": true
  }
}
